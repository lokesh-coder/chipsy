{
  "$schema": "./node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "main",
      "yes": true,
      "conventionalCommits": true,
      "createRelease": "github",
      "independentSubpackages": true
    },
    "publish": {
      "removePackageFields": [
        "devDependencies",
        "scripts"
      ],
      "yes": true
    }
  },
  "changelogPreset": "angular"
}