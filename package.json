    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/config-lerna-scopes": "^18.4.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^6.19.0",
